# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/blogAPI
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-should-be-at-least-256-bits-long-for-production-use-a-strong-random-string
JWT_EXPIRATION=3600000

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password

# Server Configuration
SERVER_PORT=8080
CONTEXT_PATH=

# Logging Configuration
SHOW_SQL=false
FORMAT_SQL=false
HIBERNATE_SQL_LOG=DEBUG
HIBERNATE_TYPE_LOG=TRACE
APP_LOG_LEVEL=INFO

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100 